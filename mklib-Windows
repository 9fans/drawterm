TARGOBJ=${OFILES:%=$TARG(%)}

all:V:	$TARG.all

inc:V:	$TARG

$TARG:	$TARGOBJ
	$AR $ARFLAGS -out:$TARG $newmember

$TARG.all:V: $OFILES
	rm -f $TARG
	$AR $ARFLAGS -out:$TARG $OFILES

%.$O:	$HFILES			# don't combine with following %.$O rules

%.$O:	%.c
	$CC $CFLAGS $stem.c

%.$O:	%.s
	$AS $AFLAGS $stem.s

$TARG(%.$O):N:	%.$O
