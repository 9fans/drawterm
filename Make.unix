# Unix
PTHREAD=
#PTHREAD=-pthread
AR=ar
AS=as
RANLIB=ranlib
CC=gcc
CFLAGS=-Wall -Wno-missing-braces -ggdb -I$(ROOT) -I$(ROOT)/include -I$(ROOT)/kern -c -D_THREAD_SAFE $(PTHREAD)
O=o
OS=posix
GUI=x11
LDADD=-L/usr/X11R6/lib -lX11 -ggdb
LDFLAGS=$(PTHREAD)
TARG=drawterm

all: default

libmachdep.a:
	arch=`uname -m|sed 's/i.86/386/;s/Power Macintosh/power/'`; \
	(cd posix-$$arch &&  make)
